<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/drawer_image" />

    <!--
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5FFFFFFF" />
        -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="@dimen/text_margin_bottom"
        android:paddingLeft="@dimen/text_margin_left"
        android:paddingRight="@dimen/text_margin_right"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="@string/hm" />
</RelativeLayout>