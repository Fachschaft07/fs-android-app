<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fk07" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme_Holo_Light_Red" >
        <activity
            android:name="edu.hm.cs.fs.app.ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.hm.cs.fs.app.ui.timetable.TimetableDayActivity"
            android:label="@string/timetable"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="edu.hm.cs.fs.app.ui.timetable.TimetableWeekActivity"
            android:label="@string/timetableoverview"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity android:name="edu.hm.cs.fs.app.util.multipane.ActivityMultiPaneDetail" />

        <receiver android:name="edu.hm.cs.fs.app.ui.timetable.widget.TimetableWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/timetable_appwidget_info" />
        </receiver>
    </application>

</manifest>