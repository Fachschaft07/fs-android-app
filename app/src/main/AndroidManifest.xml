<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fk07"
    android:versionCode="18"
    android:versionName="1.3.1" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Holo_Light_Red" >
        <activity
            android:name="edu.hm.cs.fs.app.ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.hm.cs.fs.app.ui.timetable.TimetableDayActivity"
            android:label="@string/timetable"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="edu.hm.cs.fs.app.ui.timetable.TimetableWeekActivity"
            android:label="@string/timetableoverview"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name="edu.hm.cs.fs.app.ui.info.InfoActivity"
            android:label="@string/info" >
        </activity>
        <activity
            android:name="edu.hm.cs.fs.app.ui.news.NewsFragment"
            android:label="@string/news" >
        </activity>
        <activity
            android:name="edu.hm.cs.fs.app.ui.news.NewsDetailActivity"
            android:label="@string/news" >
        </activity>
        <activity
            android:name="edu.hm.cs.fs.app.ui.mensa.MensaActivity"
            android:label="@string/food" >
        </activity>
        <activity
            android:name="edu.hm.cs.fs.app.ui.mvv.MvvFragment"
            android:label="@string/mvv" >
        </activity>
        <activity
            android:name="edu.hm.cs.fs.app.ui.rooms.RoomsActivity"
            android:label="@string/roomsearch" >
        </activity>
        <activity
            android:name="edu.hm.cs.fs.app.ui.blackboard.BBActivity"
            android:label="@string/blackboard" >
        </activity>
        <activity
            android:name="edu.hm.cs.fs.app.ui.presence.PresenceActivity"
            android:label="@string/presence" >
        </activity>

        <receiver android:name="edu.hm.cs.fs.app.ui.timetable.widget.TimetableWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/timetable_appwidget_info" />
        </receiver>
    </application>

</manifest>